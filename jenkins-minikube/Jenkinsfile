pipeline {
    agent any
    
    stages {
        stage('Install kubectl') {
            steps {
                script {
                    // Change directory to Jenkins workspace
                    dir("$WORKSPACE") {
                        // Download kubectl into Jenkins workspace
                        sh 'curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"'
                        // Make kubectl executable
                        sh 'chmod +x kubectl'
                    }
                }
            }
        }
        
        stage('Checkout') {
            steps {
                script {
                    // Clone the repository containing Kubernetes manifest files
                    git url: 'https://github.com/sindhurv18/quick.git', branch: 'master'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    // Change directory to the jenkins-minikube folder
                    dir("$WORKSPACE/jenkins-minikube") {
                        // Apply Kubernetes manifests to Minikube cluster
                        sh '$WORKSPACE/kubectl apply -f secret.yaml -f deployment.yaml --namespace=default'
                    }
                }
            }
        }
    }
}
