pipeline {
    agent any
    
    stages {
        stage('Download kubectl') {
            steps {
                script {
                    sh 'curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"'

                    // Make kubectl executable
                    sh 'chmod +x kubectl'

                    // Move kubectl to a writable directory (e.g., Jenkins workspace)
                    sh 'mv kubectl $WORKSPACE/'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    // Apply Kubernetes manifests to Minikube cluster
                    sh 'kubectl apply -f secret.yaml -f deployment.yaml --namespace=default'
                }
            }
        }
    }
}
